<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SkipPaymentMethod"
    android:background="#FAFAFB"
    >

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/baseline_keyboard_arrow_left_24"
        android:layout_marginStart="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/judului"
        app:layout_constraintBottom_toBottomOf="@id/judului"
        app:tint="@color/coklat"
        />

    <TextView
        android:id="@+id/judului"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Method"
        android:textSize="24sp"
        android:layout_marginStart="45.33dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/back"
        android:textColor="@color/black"
        android:textStyle="bold"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/opsipaymentmethod1"
        android:layout_width="326dp"
        android:layout_height="80dp"
        android:background="@drawable/bgwhitestroke"
        android:layout_marginTop="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/judului"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/logometodebayar"
            android:layout_width="37dp"
            android:layout_height="29dp"
            app:srcCompat="@drawable/logos_mastercard"
            android:layout_marginStart="21dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/namametodebayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Master Card"
            android:textSize="13sp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/logometodebayar"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/nomorkartu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="**** **** 6987"
            android:textSize="12sp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/namametodebayar"
            app:layout_constraintStart_toEndOf="@id/logometodebayar"
            android:textColor="@color/abu"
            android:textStyle="bold"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_edit_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/opsipaymentmethod2"
        android:layout_width="326dp"
        android:layout_height="80dp"
        android:background="@drawable/bgwhitestroke"
        android:layout_marginTop="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/opsipaymentmethod1"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/logometodebayar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/arcticons_dana"
            android:layout_marginStart="21dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/namametodebayar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dana"
            android:textSize="13sp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/logometodebayar2"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/nomorkartu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="**** **** 6987"
            android:textSize="12sp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/namametodebayar2"
            app:layout_constraintStart_toEndOf="@id/logometodebayar2"
            android:textColor="@color/abu"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_edit_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>