<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CheckoutMenu">

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/baseline_keyboard_arrow_left_24"
        android:layout_marginStart="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/judului"
        app:layout_constraintBottom_toBottomOf="@id/judului"
        app:tint="@color/coklat"
        />

    <TextView
        android:id="@+id/judului"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:textSize="24sp"
        android:layout_marginStart="45.33dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/back"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tulisangroomidentity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Groom Identity"
        android:textSize="18sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@id/judului"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    
    <EditText
        android:id="@+id/kolomfirstnamegroom"
        android:layout_width="171dp"
        android:layout_height="30dp"
        android:hint="First Name"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:background="@drawable/bgwhitestroke"
        android:layout_marginTop="17dp"
        android:paddingVertical="0dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tulisangroomidentity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/kolomsurnamegroom"
        />

    <EditText
        android:id="@+id/kolomsurnamegroom"
        android:layout_width="171dp"
        android:layout_height="30dp"
        android:hint="Surname"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:background="@drawable/bgwhitestroke"
        android:paddingVertical="0dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/kolomfirstnamegroom"
        app:layout_constraintBottom_toBottomOf="@id/kolomfirstnamegroom"
        app:layout_constraintStart_toEndOf="@id/kolomfirstnamegroom"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/tulisanbrideidentity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bride Identity"
        android:textSize="18sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@id/tulisangroomidentity"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/kolomfirstnamebride"
        android:layout_width="171dp"
        android:layout_height="30dp"
        android:hint="First Name"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:background="@drawable/bgwhitestroke"
        android:layout_marginTop="17dp"
        android:paddingVertical="0dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tulisanbrideidentity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/kolomsurnamebride"
        />

    <EditText
        android:id="@+id/kolomsurnamebride"
        android:layout_width="171dp"
        android:layout_height="30dp"
        android:hint="Surname"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:background="@drawable/bgwhitestroke"
        android:paddingVertical="0dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/kolomfirstnamebride"
        app:layout_constraintBottom_toBottomOf="@id/kolomfirstnamebride"
        app:layout_constraintStart_toEndOf="@id/kolomfirstnamebride"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/tulisanweddingdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wedding Details"
        android:textSize="18sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="75dp"
        app:layout_constraintTop_toBottomOf="@id/tulisanbrideidentity"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tulisanhomelocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Location"
        android:textSize="15sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@id/tulisanweddingdetails"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/kolomhomelocation"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:hint="Central Jakarta, Jakarta, Indonesia"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:background="@drawable/bgwhitestroke"
        android:layout_marginStart="41dp"
        android:paddingVertical="0dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/tulisanhomelocation"
        app:layout_constraintBottom_toBottomOf="@id/tulisanhomelocation"
        app:layout_constraintStart_toEndOf="@id/tulisanhomelocation"
        app:layout_constraintEnd_toEndOf="@id/kolomsurnamegroom"
        />


    <TextView
        android:id="@+id/tulisanweddinglocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wedding Location"
        android:textSize="15sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@id/tulisanhomelocation"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/kolomweddinglocation"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:hint="Central Jakarta, Jakarta, Indonesia"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:background="@drawable/bgwhitestroke"
        android:paddingVertical="0dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/tulisanweddinglocation"
        app:layout_constraintBottom_toBottomOf="@id/tulisanweddinglocation"
        app:layout_constraintStart_toStartOf="@id/kolomhomelocation"
        app:layout_constraintEnd_toEndOf="@id/kolomsurnamegroom"
        />


    <TextView
        android:id="@+id/tulisandatewedding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Of Wedding"
        android:textSize="15sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@id/tulisanweddinglocation"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/kolomtahun"
        android:layout_width="71dp"
        android:layout_height="30dp"
        android:hint="2029"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:background="@drawable/bgwhitestroke"
        android:paddingVertical="0dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/tulisandatewedding"
        app:layout_constraintBottom_toBottomOf="@id/tulisandatewedding"
        app:layout_constraintStart_toStartOf="@id/kolomhomelocation"
        app:layout_constraintEnd_toStartOf="@id/kolombulan"
        />

    <EditText
        android:id="@+id/kolombulan"
        android:layout_width="71dp"
        android:layout_height="30dp"
        android:hint="Januari"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:background="@drawable/bgwhitestroke"
        android:paddingVertical="0dp"
        android:gravity="center"
        android:layout_marginHorizontal="3dp"
        app:layout_constraintTop_toTopOf="@id/tulisandatewedding"
        app:layout_constraintBottom_toBottomOf="@id/tulisandatewedding"
        app:layout_constraintStart_toEndOf="@id/kolomtahun"
        app:layout_constraintEnd_toStartOf="@id/kolomtanggal"
        />

    <EditText
        android:id="@+id/kolomtanggal"
        android:layout_width="71dp"
        android:layout_height="30dp"
        android:hint="23"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:background="@drawable/bgwhitestroke"
        android:paddingVertical="0dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/tulisandatewedding"
        app:layout_constraintBottom_toBottomOf="@id/tulisandatewedding"
        app:layout_constraintStart_toEndOf="@id/kolombulan"
        app:layout_constraintEnd_toEndOf="@id/kolomsurnamegroom"
        />

    <TextView
        android:id="@+id/tulisanpaymentmethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Method"
        android:textSize="18sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="162dp"
        app:layout_constraintTop_toBottomOf="@id/tulisanweddingdetails"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/namakartu"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="Cardholder Name"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:background="@drawable/bgwhitestroke"
        android:layout_marginTop="30.96dp"
        android:layout_marginHorizontal="53dp"
        android:paddingVertical="0dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tulisanpaymentmethod"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/nomorkartu"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="Card Number"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:background="@drawable/bgwhitestroke"
        android:layout_marginTop="9dp"
        android:layout_marginHorizontal="53dp"
        android:paddingVertical="0dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/namakartu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/tanggalexpire"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:hint="Expiry Date"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:background="@drawable/bgwhitestroke"
        android:layout_marginTop="9dp"
        android:paddingVertical="0dp"
        android:gravity="center"
        android:layout_marginEnd="13dp"
        app:layout_constraintTop_toBottomOf="@id/nomorkartu"
        app:layout_constraintStart_toStartOf="@id/nomorkartu"
        app:layout_constraintEnd_toStartOf="@id/kodesecurity"
        />

    <EditText
        android:id="@+id/kodesecurity"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:hint="Security Code"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:background="@drawable/bgwhitestroke"
        android:layout_marginTop="9dp"
        android:paddingVertical="0dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/nomorkartu"
        app:layout_constraintStart_toEndOf="@id/tanggalexpire"
        app:layout_constraintEnd_toEndOf="@id/nomorkartu"
        />

    <EditText
        android:id="@+id/kodepost"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:hint="Postal Code"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:background="@drawable/bgwhitestroke"
        android:layout_marginTop="9dp"
        android:paddingVertical="0dp"
        android:gravity="center"
        android:layout_marginEnd="13dp"
        app:layout_constraintTop_toBottomOf="@id/tanggalexpire"
        app:layout_constraintStart_toStartOf="@id/nomorkartu"
        app:layout_constraintEnd_toStartOf="@id/negara"
        />

    <EditText
        android:id="@+id/negara"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:hint="Country"
        android:textSize="11sp"
        android:textColor="@color/black"
        android:background="@drawable/bgwhitestroke"
        android:layout_marginTop="9dp"
        android:paddingVertical="0dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/kodesecurity"
        app:layout_constraintStart_toEndOf="@id/kodepost"
        app:layout_constraintEnd_toEndOf="@id/nomorkartu"
        />

