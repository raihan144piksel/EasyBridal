    <TextView
        android:id="@+id/keteranganharga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Total"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/totalharga"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/abu"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tulisanstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toTopOf="@id/keteranganharga"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/abu"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/kondisibooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available"
        android:textSize="16sp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toTopOf="@id/totalharga"
        app:layout_constraintEnd_toEndOf="@id/totalharga"
        android:textColor="@color/ijokomplit"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/totalharga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp500.000.000"
        android:textSize="16sp"
        android:layout_marginEnd="20dp"
        android:layout_marginVertical="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tombolorder"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/tombolorder"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:backgroundTint="#FFD600"
        android:text="Checkout Now"
        android:textSize="16sp"
        android:layout_marginBottom="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black"
        />

