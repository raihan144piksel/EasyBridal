<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentSuccess"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/judului"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Successfully"
        android:textSize="24sp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@id/gambarsukses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/subjudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat, Anda saya skem, muehehehe. Lorem ipsum dolor sit amet consectetur. At interdum nunc posuere ultricies non enim sit amet tellus. Elit amet pretium lectus amet."
        android:textSize="18sp"
        android:layout_marginTop="21dp"
        android:layout_marginHorizontal="47dp"
        app:layout_constraintTop_toBottomOf="@id/judului"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/abu"
        />


    <ImageView
        android:id="@+id/gambarsukses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/clarity_success_standard_solid"
        android:layout_marginBottom="236dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/tombolcekorder"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:backgroundTint="#FFD600"
        android:text="Check My Order"
        android:textSize="16sp"
        android:layout_marginBottom="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black"
        />


</androidx.constraintlayout.widget.ConstraintLayout>